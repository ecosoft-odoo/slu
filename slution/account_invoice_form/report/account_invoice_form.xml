<odoo>
    <!-- Copyright 2020 Ecosoft Co., Ltd (http://ecosoft.co.th/)-->
    <template id="slution_invoice_form">
        <div class="header">
            <div class="row">
                <div class="col-8">
                    <h2><span t-field="o.company_id.name"/></h2>
                </div>
                <div class="col-4 text-center">
                    <h3>ใบยืมของชั่วคราว</h3>
                    <t t-if="i == 0">
                        <h5>ORIGINAL</h5>
                    </t>
                    <t t-else="">
                        <h5>COPY</h5>
                    </t>
                </div>
            </div>
            <div class="row mt16">
                <div class="col-8">
                    <div class="row">
                        <div class="col-3">
                            <p>ลูกค้า</p>
                        </div>
                        <div class="col-9">
                            <span t-field="o.partner_id.name"/><br/>
                            <span t-field="o.partner_id.street"/>
                            <span t-field="o.partner_id.street2"/>
                            <span t-field="o.partner_id.city"/>
                            <span t-field="o.partner_id.state_id.name"/>
                            <span t-field="o.partner_id.country_id.name"/>
                            <span t-field="o.partner_id.zip"/>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="row">
                        <div class="col-4">
                            <p>เลขที่</p>
                        </div>
                        <div class="col-8">
                            <span t-field="o.name"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <p>วันที่</p>
                        </div>
                        <div class="col-8">
                            <span t-field="o.invoice_date"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    <p>Remark</p>
                </div>
                <div class="col-10">
                    <span t-field="o.narration"/>
                </div>
            </div>
        </div>
        <div class="article">
            <t t-set="datas" t-value="o._get_datas()"/>
            <t t-set="n" t-value="1"/>
            <t t-set="total_amount" t-value="0"/>
            <table class="table table-sm table-bordered mt8" style="border: 1px solid black;">
                <thead>
                    <tr>
                        <th class="text-center">No</th>
                        <th class="text-center">รหัสสินค้า/รายละเอียด</th>
                        <th class="text-center">จำนวน</th>
                        <th class="text-center">หน่วยละ</th>
                        <th class="text-center">จำนวนเงิน</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="datas['invoice_lines']" t-as="line">
                        <td class="text-center">
                            <span t-esc="n"/>
                            <t t-set="n" t-value="n+1"/>
                        </td>
                        <td>
                            <span t-esc="line['product']"/>
                            <t t-if="line['lots']">
                                <br/>Serial:
                                <t t-foreach="line['lots']" t-as="lot">
                                    <br/>&#160;&#160;&#160;&#160;&#160;&#160;<span t-esc="lot"/>
                                </t>
                            </t>
                        </td>
                        <td class="text-center">
                            <span t-esc="line['quantity']"/>
                            <span t-esc="line['product_uom']"/>
                        </td>
                        <td class="text-right">
                            <span t-esc="'{0:,.2f}'.format(line['price_unit'])"/>
                        </td>
                        <td class="text-right">
                            <span t-esc="'{0:,.2f}'.format(line['price_subtotal'])"/>
                            <t t-set="total_amount" t-value="total_amount+line['price_subtotal']"/>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="clearfix">
                <div class="row">
                    <div class="col-6">
                    </div>
                    <div class="col-6">
                        <table class="table table-sm table-borderless">
                            <tr>
                                <td>
                                    รวมเป็นเงิน
                                </td>
                                <td class="text-right">
                                    <span t-esc="'{0:,.2f}'.format(datas['amount_subtotal'])"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    หักส่วนลด
                                </td>
                                <td class="text-right">
                                    <t t-if="datas['discount']">
                                        <span t-esc="'{0:,.2f}'.format(datas['discount'])"/>
                                    </t>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    ยอดหลังหักส่วนลด
                                </td>
                                <td class="text-right">
                                    <t t-if="datas['discount']">
                                        <span t-esc="'{0:,.2f}'.format(datas['amount_after_discount'])"/>
                                    </t>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    หักเงินมัดจำ
                                </td>
                                <td class="text-right">
                                    <t t-if="datas['deposit']">
                                        <span t-esc="'{0:,.2f}'.format(datas['deposit'])"/>
                                    </t>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    จำนวนเงินหลังหักมัดจำ
                                </td>
                                <td class="text-right">
                                    <t t-if="datas['deposit']">
                                        <span t-esc="'{0:,.2f}'.format(datas['amount_after_deposit'])"/>
                                    </t>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    ภาษีมูลค่าเพิ่ม 7%
                                </td>
                                <td class="text-right">
                                    <t t-if="datas['amount_tax']">
                                        <span t-esc="'{0:,.2f}'.format(datas['amount_tax'])"/>
                                    </t>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    จำนวนเงินรวมทั้งสิ้น
                                </td>
                                <td class="text-right" style="border-bottom: double;">
                                    <span t-esc="'{0:,.2f}'.format(datas['amount_total'])"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer">
            <div class="row mb16">
                <div class="col-1">
                </div>
                <div class="col-11">
                    <p>ได้รับสินค้าตามรายการข้างบนนี้ไว้ถูกต้องและอยู่ในสภาพเรียบร้อยทุกประการ</p>
                </div>
            </div>
            <div class="row mt16">
                <div class="col-1"/>
                <div class="col-5">
                    <div class="row">
                        <div class="col-4 text-center">
                            <p>ผู้รับสินค้า</p>
                        </div>
                        <div class="col-8" style="border-bottom: 1px solid black;">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 text-center">
                            <p>วันที่</p>
                        </div>
                        <div class="col-8" style="border-bottom: 1px solid black;">
                        </div>
                    </div>
                </div>
                <div class="col-5">
                    <div class="row">
                        <div class="col-4 text-center">
                            <p>ผู้ส่งสินค้า</p>
                        </div>
                        <div class="col-8" style="border-bottom: 1px solid black;">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 text-center">
                            <p>วันที่</p>
                        </div>
                        <div class="col-8" style="border-bottom: 1px solid black;">
                        </div>
                    </div>
                </div>
                <div class="col-1"/>
            </div>
            <p class="text-right mt32">
                Page: <span class="page"/> / <span class="topage"/>
            </p>
        </div>
    </template>
    <template id="slution_invoice_form_pdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="ncopies" t-value="3"/>
                <t t-foreach="range(ncopies)" t-as="i">
                    <t t-call="slution.slution_invoice_form"/>
                </t>
            </t>
        </t>
    </template>
</odoo>
